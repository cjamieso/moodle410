{{!
@template report_analytics/studentselect

Template for a student selector (student/grade filter).

Classes required for JS:
* none

Data attributes required for JS:
* none

Context variables required for this template:
* student {label, type, helptooltip, optgroup|options, attributes}
* grade {items, operators, gradehelptooltip}

}}
{{$ label }}
    <label> {{# str }} filterby, report_analytics {{/ str }} </label>
{{/ label }}
{{$ altbutton }}
    <button type="button" class="filterbutton btn btn-secondary" value="student">
        {{# str }} filterbystudentbutton, report_analytics {{/ str }}
    </button>
{{/ altbutton }}
<button type="button" class="filterbutton btn btn-secondary" value="grade">
    {{# str }} filterbygradebutton, report_analytics {{/ str }}
</button>
<div class="clear"></div>
{{$ altselect }}
    {{# student }}
        {{> report_analytics/selectfilter }}
    {{/ student }}
{{/ altselect}}
{{# grade }}
    {{> report_analytics/gradefilter }}
{{/ grade }}
{{$ selectfooter }}
{{/ selectfooter }}
<div class="clear"></div>
