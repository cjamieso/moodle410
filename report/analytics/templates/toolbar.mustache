{{!
@template report_analytics/toolbar

Template for an analytics chart toolbar.

Classes required for JS:
* none

Data attributes required for JS:
* none

Context variables required for this template:
* png T/F indicating whether a png export button should be included
* excel {params}
* copy T/F indicating if the copy to clipboard button should be included
* wordcloud T/F indicating if wordcloud button should be included

}}
{{# png }}
    <div class="pngexport">
        {{# pix }} e/insert_edit_image, core,{{# str }} pngexportalt, report_analytics {{/ str}}{{/ pix}}
    </div>
{{/ png }}
{{# excel }}
    <div class="excelexport">
        {{# pix }} e/table, core,{{# str }} excelexportalt, report_analytics {{/ str }}{{/ pix }}
        <form method="post" action="ajax_request.php" style="display: none;">
            <input type="submit" value="Excel" class="excelsubmit">
            {{# params }}
                <input type="hidden" name="{{name}}" value="{{value}}">
            {{/ params }}
        </form>
    </div>
{{/ excel }}
{{# copy }}
    <div class="copyusers">
        {{# pix }} e/copy, core,{{# str }} copyusersalt, report_analytics {{/ str}}{{/ pix}}
    </div>
{{/ copy }}
{{# wordcloud }}
    <div class="wordcloud">
        {{# pix }} t/message, core,{{# str }} wordcloudalt, report_analytics {{/ str }}{{/ pix }}
    </div>
{{/ wordcloud }}
{{# undo }}
    <div class="redo">
        {{# pix }} e/redo, core,{{# str }} redoalt, report_analytics {{/ str }}{{/ pix }}
    </div>
    <div class="undo">
        {{# pix }} e/undo, core,{{# str }} undoalt, report_analytics {{/ str }}{{/ pix }}
    </div>
{{/ undo }}
