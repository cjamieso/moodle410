{{!
@template report_analytics/gradechart

Template for an grade/action scatter chart.

Classes required for JS:
* none

Data attributes required for JS:
* none

Context variables required for this template:
* chartname the name of the chart (Capital Case)
* chartnamelower the name of the chart (all lower case)
* time used to generate unique IDs
* datefilter the HTML (moodle forms) for the date filter
* presetdates {date, text}
* student {label, type, helptooltip, optgroup|options, attributes}

}}
{{< report_analytics/chart }}

{{$ basicfilters }}
    {{# instructor }}
        {{# student }}
            {{> report_analytics/selectfilter }}
        {{/ student }}
    {{/ instructor }}
    {{^ instructor }}
        <div class="alert alert-warning">
            <b>{{# str }} warning, core {{/ str }}:</b> {{# str }} studentquadrant, report_analytics {{/ str }}
        </div>
    {{/ instructor }}
    <div class="clear"></div>
{{/ basicfilters }}

{{$ advancedfilters }}
{{/ advancedfilters }}

{{$ footer }}
{{/ footer }}

{{/ report_analytics/chart }}
