{{!
@template report_analytics/selector

Template for the chart selector widget.

Classes required for JS:
* chartcontainer, layoutmenu, chart-list, chart-grid, d3plus

Data attributes required for JS:
* none

Context variables required for this template:
* charts {name, id, value, charthelp}

}}

<canvas style="display: none;"></canvas>
<div class="layoutmenu">
    <div class="chart-list">
        {{# pix }} a/view_list_active, core,{{# str }} chartlistalt, report_analytics {{/ str}}{{/ pix}}
    </div>
    <div class="chart-grid">
        {{# pix }} a/view_icon_active, core,{{# str }} chartgridalt, report_analytics {{/ str}}{{/ pix}}
    </div>
</div>
<div class="clear"></div>
<div class="coursefiltercontainer">
    <label> {{# str }} selectcourse, report_analytics {{/ str }} </label>
    <select class="single select coursefilter" name="coursefilter">
    {{# courses }}
        <option value="{{{id}}}">{{name}}</option>
    {{/ courses }}
    </select>
</div>
<div id="chartcontainer"></div>
<div class="clear"></div>
<button class="d3plus btn btn-primary" type="button">{{# str }} addreport, report_analytics {{/ str }}</button>
<button class="scheduledreport btn btn-primary" type="button">{{# str }} schedulereport, report_analytics {{/ str }}</button>
<div class="clear"></div>
<div class="addstatustext"></div>
<div class="modal-background"></div>
{{! moodle selector gets wrapped in three sets of classes }}
<div id="graphchooserform" class="jschooser moodle-dialogue-base" style="display: none;">
    <div class="moodle-has-zindex yui3-panel chooserdialogue moodle-dialogue">
        <div class="moodle-dialogue-wrap moodle-dialogue-content">
            <div class="moodle-dialogue-hd">
                {{# str }} choosereporttoadd, report_analytics {{/ str }}
                <span class="yui3-widget-buttons">
                    <button class="yui3-button closebutton" title="Close"></button>
                </span>
            </div>
            <div class="moodle-dialogue-bd">
                {{>core/chooser}}
            </div>
        </div>
    </div>
</div>
