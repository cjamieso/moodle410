{{!
@template report_analytics/postsdata

Template to output a set of posts by one or more students.

Classes required for JS:
* wordcloudcontainer, pngexport, wordcloudclosebutton, forumheader

Data attributes required for JS:
* none

Context variables required for this template:
* students {name, postlist}

}}

<div class="wordcloudcontainer" style="display: none;">
    <div class="pngexport">
        {{# pix }} e/insert_edit_image, core,{{# str }} pngexportalt, report_analytics {{/ str }}{{/ pix }}
    </div>
    <div class="wordcloudclosebutton">
        {{# pix }} e/cancel, core, {{# str }} closebuttonalt, report_analytics {{/ str }}{{/ pix }}
    </div>
</div>
{{# students }}
    <h2>{{name}}</h2>
    {{# postlist }}
        {{# forums }}
            <div class="forumheader">
                <h3><a href="{{link}}">{{name}}</a></h3>
                <p>[{{# str }} totalposts, report_analytics {{/ str}}{{postcount}}]</p>
            </div>
            {{{postshtml}}}
        {{/ forums }}
    {{/ postlist }}
    {{^ postlist }}
        <div class="forumheader">
            <p>{{# str }} noposts, report_analytics {{/ str }}</p>
        </div>
    {{/ postlist }}
{{/ students }}
