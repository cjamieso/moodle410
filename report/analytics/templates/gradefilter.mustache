{{!
@template report_analytics/gradefilter

Template for a grade filter.

Classes required for JS:
* gradefiltercontainer, valuefilter

Data attributes required for JS:
* none

Context variables required for this template:
* items {label, type, options}
* operators {label, type, options}
* gradehelptooltip {url, helptext, attributes}

}}
<div class="gradefiltercontainer" style="display: none">
    <label> {{# str }} grades {{/ str }} </label>
    {{# items }}
        {{> report_analytics/selectfilter }}
    {{/ items }}
    {{# operators }}
        {{> report_analytics/selectfilter }}
    {{/ operators }}
    <input type="text" class="valuefilter form-control" name="gradevalue" />
    {{# gradehelptooltip }}
        {{> core/help_icon }}
    {{/ gradehelptooltip }}
</div>
